{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Building with gcc",
            "command": "gcc",
            "args": [
                "src/*.c",
                "-g",
                "-o",
                "main.exe",
                "`sdl2-config --cflags --libs`",
                "-lSDL2_gfx",
                "-lSDL2_ttf",
                "-lSDL2_image",
                "-lSDL2_mixer",
                "-Wall",
                "-Werror",
                "-lm",
                "-fdiagnostics-color=always"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}